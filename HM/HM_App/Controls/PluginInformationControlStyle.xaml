<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:pluginInfo="clr-namespace:HM_App.Controls"
                    >

    <Style TargetType="{x:Type pluginInfo:PluginInformationControl}">
        <Setter Property="MinHeight" Value="44"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type pluginInfo:PluginInformationControl}">
                    <Border Height="30" Margin="10" CornerRadius="4">
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="0" Color="Black" Direction="0" RenderingBias="Quality" Opacity="0.5"/>
                        </Border.Effect>
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0,1" StartPoint="1,0">
                                <GradientStop Color="#FF32DCE4"/>
                                <GradientStop Color="#FF15CF94" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>

                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>