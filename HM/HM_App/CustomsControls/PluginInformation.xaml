<UserControl x:Class="HM_App.CustomsControls.PluginInformation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HM_App.CustomsControls"
             mc:Ignorable="d"  
             MinWidth="480" >
    <Border CornerRadius="8" Background="#10000000">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="46"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="48"/>
                <RowDefinition Height="4"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Column="1" Grid.ColumnSpan="3" Text="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=PluginName}" FontSize="12pt" />
        </Grid>
    </Border>
</UserControl>
