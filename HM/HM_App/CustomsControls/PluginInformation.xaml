<UserControl x:Class="HM_App.CustomsControls.PluginInformation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HM_App.CustomsControls"
             mc:Ignorable="d"  
             MinWidth="480" >
    <Border>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="46"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="42"/>
                <RowDefinition Height="24"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Column="1" Grid.ColumnSpan="3" Text="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=PluginName}" FontSize="18pt" />
            <TextBlock Grid.Row="1" Grid.Column="0" Text="Autor: WinterStudios" FontWeight="Light"/>
            <Ellipse Grid.Column="3" Grid.RowSpan="2" StrokeThickness="4" Stroke="#FF1797A4" Width="56" Height="56" SnapsToDevicePixels="False"/>
        </Grid>
    </Border>
</UserControl>
